<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.8.1/socket.io.js" integrity="sha512-8BHxHDLsOHx+flIrQ0DrZcea7MkHqRU5GbTHmbdzMRnAaoCIkZ97PqZcXJkKZckMMhqfoeaJE+DNUVuyoQsO3Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <title>Simple Chat App</title>
</head>

<body>

  <section class="w-50 bg-secondary-subtle mx-auto shadow-lg">
    <header class="m-2 bg-secondary text-white text-center p-4">
      Super Chat
      <p id="status" class="text-warning p-2 font-italic"></p>
    </header>

    <!-- Change Username Section -->
    <div id="change_username" class="d-flex justify-centent-center text-center mb-4 p-4">
      <input id="username" type="text" class="form-control me-2" placeholder="Enter Username" />
      <button id="send_username" type="button" class="btn btn-primary">
        Change username
      </button>
    </div>


    <!-- Chat Room Section -->
    <ul id="chatroom" class="shadow-mg text-primary">
    </ul>

    <!-- Message Input Section -->
    <section id="input_zone" class="d-flex justify-centent-center text-center p-4">
      <input id="message" class="form-control" type="text" placeholder="Type your message" />
      <button id="send_message" class="btn btn-success">
        Send
      </button>
    </section>
  </section>

  <script src="chat.js"></script>
</body>

</html>